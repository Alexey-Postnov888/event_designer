<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"
        android:background="@color/mainBackground">

        <TextView
            android:id="@+id/event_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/event_details_title"
            android:textColor="@color/black"
            android:textSize="31sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/event_details_navigation_chip_group_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/chipsBackground"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/event_details_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:strokeWidth="0dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/event_details_navigation_chip_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:selectionRequired="true"
                app:singleSelection="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/chipsBackground"
                app:chipSpacing="5dp"
                android:paddingHorizontal="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Общая информация"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:checkedIcon="@null"
                    app:chipCornerRadius="10dp"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeWidth="0dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Карта"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:checkedIcon="@null"
                    app:chipCornerRadius="10dp"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeWidth="0dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTimeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Таймлайн"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:checkedIcon="@null"
                    app:chipCornerRadius="10dp"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeWidth="0dp"/>

            </com.google.android.material.chip.ChipGroup>

        </com.google.android.material.card.MaterialCardView>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:context=".MainActivity"
            android:name="androidx.navigation.fragment.NavHostFragment"
            app:defaultNavHost="true"
            app:layout_constraintTop_toBottomOf="@id/event_details_navigation_chip_group_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp">

        </androidx.fragment.app.FragmentContainerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>